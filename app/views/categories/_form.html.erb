<div class="container" content="width=device-width,initial-scale=1">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 bg-dark rounded", local: true) do |f| %>

      <div class="input-group row mb-3">
        <%= f.label :name, "Category Name", class: "col-sm-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category name"  %>
        </div>
      </div>


      <div class="input-group justify-content-center m-3">
        <%= f.submit class: "btn btn-outline-light btn-lg" %>
      </div>

      <% end %>
    </div>
  </div>
</div>
