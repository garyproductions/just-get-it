<h1 class="text-center p-3">Log in</h1>

<div class="container" content="width=device-width,initial-scale=1">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 bg-dark rounded", local: true) do |f| %>

      <div class="input-group row mb-3">
        <%= f.label :username, class: "col-sm-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter your username"  %>
        </div>
      </div>

      <div class="input-group row mb-3">
        <%= f.label :password, class: "col-sm-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="input-group justify-content-center m-3">
        <%= f.submit"Log in", class: "btn btn-outline-light btn-lg" %>
      </div>

      <% end %>
      <div class="text-center m-3">
        <%= link_to 'Cancel and return to articles listing', articles_path, class: "text-info" %>
      </div>

    </div>
  </div>
</div>
